<div class="form-horizontal">
    <div class="row">
        @Html.LabelFor(model => model.Photo, new { @class = "control-label  col-md-2" })
        @using (Html.BeginForm("FileUpload", "Equipment", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-group col-md-6">
                <input id="photo-input" type="file" class="file" data-overwrite-initial="true" name="photos" data-preview-file-type="any" multiple="true">
            </div>
            <input type="hidden" value=@Model.EquipmentID name="key" />
        }
    </div>
</div>

<script>
    var init = "@Model.Photo";
    var arr = new Array();

    arr = init.split('$');
    var init_arr = new Array();
    for (var i = 0; i < arr.length; i++) {
        init_arr[i] = "<img src='/img/equipments/" + arr[i] + "' class='file-preview-image'>";
    }

    $("#photo-input").fileinput({
        initialPreview: init_arr,
        maxFileSize: 100
    });
</script>

<div>
    @Html.ActionLink("返回", "Index")
</div>

