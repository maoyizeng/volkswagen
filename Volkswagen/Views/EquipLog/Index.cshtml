@model IEnumerable<Volkswagen.Models.EquipLogModels>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>设备台账</h2>

<script type="text/javascript">
    var row = 0;
    var fieldMap = new Array(
        "设备编号",
        "使用部门",
        "设备名称",
        "型号",
        "规格",
        "立卡时间",
        "启用时间",
        "原值",
        "累计折旧",
        "一级地点",
        "二级地点",
        "三级地点",
        "备注",
        "最后修改时间",
        "修改人",
        "创建时间",
        "创建人"
    );

    var opMap = new Array(
        "=",
        ">",
        "<",
        ">=",
        "<="
        );

    var valueMap = new Array(
    "EquipmentID",
    "Department",
    "EquipDes",
    "Type",
    "Spec",
    "DocumentDate",
    "EnableDate",
    "OriginValue",
    "Depreciation",
    "Spot1",
    "Spot2",
    "Spot3",
    "Remark",
    "ChangeTime",
    "Changer",
    "CreateTime",
    "Creator");

    function append_input() {

        var fm = document.getElementById("query_form");
        var f = document.createElement("div");
        f.className = "form-group";
        fm.appendChild(f);

        var field = document.createElement("select");
        var op = document.createElement("select");
        var operand = document.createElement("input");

        field.name = "field" + row;
        op.name = "op" + row;
        operand.name = "operand" + row;

        //operand.className = "form-control"

        for (var i = 0; i < fieldMap.length; i++) {
            var option = document.createElement("option");
            option.text = fieldMap[i];
            option.value = valueMap[i];
            field.add(option);
        }

        for (var i = 0; i < opMap.length; i++) {
            var ooption = document.createElement("option");
            ooption.text = opMap[i];
            ooption.value = i;
            op.add(ooption);
        }


        f.appendChild(field);
        f.appendChild(op);
        f.appendChild(operand);

        row++;
    }
</script>


<div class="row">
    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">查询</h3>
            </div>
            <div class="panel-body">
                <form action="/EquipLog/" id="query_form" method="post">
                    <input type="button" value="+" onclick="append_input()" class="btn btn-sm" />
                    <input type="submit" id="query" value="确定" class="btn btn-sm" />
                </form>
            </div>
        </div>
    </div>
</div>

<br />

