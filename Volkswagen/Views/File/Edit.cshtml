                @Html.EditorFor(model => model.Changer)
                @Html.ValidationMessageFor(model => model.Changer)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CreateTime, new { @class = "control-label col-md-2" })
