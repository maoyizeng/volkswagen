                @Html.EditorFor(model => model.ChangeTime)
                @Html.ValidationMessageFor(model => model.ChangeTime)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Changer, new { @class = "control-label col-md-2" })
