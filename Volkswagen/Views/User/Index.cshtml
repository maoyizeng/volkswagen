            new_operand.name = name_placement;
            this.parentElement.appendChild(new_operand);
            new_operand.name = name_placement;
        }

        op.value = b;

        cancel.onclick = function () {
            this.parentElement.hidden = true;
            this.parentElement.lastChild.value = "";
        };

