                </dd>

            </dl>

            @{ var em = Model.GetEnumerator();
             var current_em = Model.Where(p => p.UserID == user_id).First();
             var prev_em = em.Current;
             string first_one = "", last_one = "";
             try
             {
                 em.MoveNext();
                 while ((em.Current != null) && (em.Current != current_em))
                 {
                     prev_em = em.Current;
                     em.MoveNext();
                 }
                 if (prev_em == null)
                 {
                     first_one = "disabled=\"disabled\"";
                     prev_em = em.Current;
                 }
                 if (!em.MoveNext())
                 {
                     last_one = "disabled=\"disabled\"";
                 }
             }
             catch (Exception) { }

            }

            <div class="btn-group">
                <button class='btn btn-default' @first_one onclick="var sel=document.getElementById('selected_item'); sel.value='@prev_em.UserID';"><span class='glyphicon glyphicon-chevron-left'></span>上一项</button>
                @Html.ActionLink("详细", "Details", "Inspection", new { id = user_id }, new { @class = "btn btn-default" })
                @Html.ActionLink("编辑", "Edit", "Inspection", new { id = user_id }, new { @class = "btn btn-default" })
                @Html.ActionLink("删除", "Delete", "Inspection", new { id = user_id }, new { @class = "btn btn-default" })
                <button class='btn btn-default' @last_one onclick="var sel=document.getElementById('selected_item'); sel.value='@em.Current.UserID';"><span class='glyphicon glyphicon-chevron-right'></span>下一项</button>
            </div>

        </div>
